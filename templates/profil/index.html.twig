{% extends 'base.html.twig' %}

{% block page_stylesheets %}
{% endblock %}

{% block body %}
    <div class="panel box box-warning">
        <div class="box-header with-border">
            <h4 class="box-title">
                Modifier mon profil
            </h4>
        </div>

        <div class="box-body">
            <form role="form" action="{{ path('profil')}}" method="post" >

                <!-- text input -->
                <div class="form-group">
                    <label>Nom Pr√©nom</label>
                    {{ form_widget(form.fullname, {'attr': {'class': 'form-control'}}) }}
                </div>

                {% if app.user.password is not null %}
                    <div class="form-group">
                        <label>Login</label>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="plainPassword">Mot de passe</label>
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control',
                            'placeholder': 'Entrez un mot de passe'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                    </div>
                {% endif %}

                <div class="box-footer">
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </div>

            </form>
        </div>
    </div>
{% endblock %}

